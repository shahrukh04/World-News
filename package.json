{
  "name": "world-news-app",
  "version": "1.0.0",
  "description": "Full-stack news application with automated news fetching, SEO optimization, and monetization features",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "dev:local": "concurrently \"npm run server:local\" \"npm run client:local\"",
    "dev:prod": "concurrently \"npm run server:prod\" \"npm run client:prod\"",
    "server:dev": "cd backend && npm run dev",
    "server:local": "cd backend && npm run start:local",
    "server:prod": "cd backend && npm run start:prod",
    "client:dev": "cd frontend && npm run dev",
    "client:local": "cd frontend && npm run dev:local",
    "client:prod": "cd frontend && npm run dev:prod",
    "server:start": "cd backend && npm start",
    "client:build": "cd frontend && npm run build",
    "client:build:local": "cd frontend && npm run build:local",
    "client:build:prod": "cd frontend && npm run build:prod",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
   "keywords": ["blog", "seo", "monetization", "adsense", "affiliate-marketing", "react", "node.js"],
   "author": "Your Name",
   "license": "MIT",
   "devDependencies": {
     "concurrently": "^8.2.2"
   }
 }