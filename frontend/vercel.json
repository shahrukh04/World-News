{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://world-news-skvr.onrender.com/api/$1"
    }
  ],
  "routes": [
    {
      "src": "/ads.txt",
      "dest": "/ads.txt",
      "headers": {
        "Content-Type": "text/plain"
      }
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt",
      "headers": {
        "Content-Type": "text/plain"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}