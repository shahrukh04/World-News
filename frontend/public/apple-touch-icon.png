<svg xmlns="http://www.w3.org/2000/svg" width="180" height="180" viewBox="0 0 180 180">
  <defs>
    <linearGradient id="bgGradientApple" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#dc2626;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#b91c1c;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="globeGradientApple" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f3f4f6;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="2" dy="2" stdDeviation="3" flood-color="#000000" flood-opacity="0.3"/>
    </filter>
  </defs>
  
  <!-- Background with rounded corners -->
  <rect width="180" height="180" rx="32" ry="32" fill="url(#bgGradientApple)"/>
  
  <!-- Globe outline with shadow -->
  <circle cx="90" cy="90" r="55" fill="url(#globeGradientApple)" stroke="#dc2626" stroke-width="3" filter="url(#shadow)"/>
  
  <!-- Globe grid lines -->
  <path d="M 35 90 Q 90 65 145 90 Q 90 115 35 90" stroke="#dc2626" stroke-width="4" fill="none"/>
  <path d="M 35 90 Q 90 115 145 90 Q 90 65 35 90" stroke="#dc2626" stroke-width="4" fill="none"/>
  <line x1="90" y1="35" x2="90" y2="145" stroke="#dc2626" stroke-width="4"/>
  
  <!-- Continents representation -->
  <path d="M 70 75 Q 85 70 100 75 Q 95 85 85 90 Q 75 85 70 75" fill="#dc2626" opacity="0.7"/>
  <path d="M 95 100 Q 110 95 120 105 Q 115 115 105 110 Q 100 105 95 100" fill="#dc2626" opacity="0.7"/>
  
  <!-- News lines/text representation -->
  <rect x="100" y="45" width="35" height="6" fill="#dc2626" rx="3"/>
  <rect x="100" y="55" width="25" height="6" fill="#dc2626" rx="3"/>
  <rect x="100" y="65" width="30" height="6" fill="#dc2626" rx="3"/>
  
  <!-- News document icon -->
  <rect x="110" y="125" width="25" height="18" fill="#ffffff" stroke="#dc2626" stroke-width="2" rx="3"/>
  <line x1="115" y1="130" x2="130" y2="130" stroke="#dc2626" stroke-width="2"/>
  <line x1="115" y1="135" x2="130" y2="135" stroke="#dc2626" stroke-width="2"/>
  <line x1="115" y1="140" x2="125" y2="140" stroke="#dc2626" stroke-width="2"/>
  
  <!-- Breaking news indicator -->
  <circle cx="140" cy="50" r="8" fill="#fbbf24" stroke="#dc2626" stroke-width="2"/>
  <text x="140" y="55" font-family="Arial, sans-serif" font-size="10" font-weight="bold" text-anchor="middle" fill="#dc2626">!</text>
</svg>